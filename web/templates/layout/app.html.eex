

<!doctype html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<link rel="icon" type="image/png" href="/img/favicon.ico">
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

	<title>LitterBug Dashboard</title>

	<meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <meta name="viewport" content="width=device-width" />

		<link href="https://fonts.googleapis.com/icon?family=Material+Icons"    rel="stylesheet">
    <!-- Bootstrap core CSS     -->
    <link href="<%= static_path(@conn, "/css/bootstrap.min.css") %>"  rel="stylesheet" />

    <!-- Animation library for notifications   -->
    <link href="<%= static_path(@conn, "/css/bootstrap.min.css") %>"  rel="stylesheet"/>

    <!--  Light Bootstrap Table core CSS    -->
    <link href="<%= static_path(@conn, "/css/light-bootstrap-dashboard.css?v=1.4.0") %>"  rel="stylesheet"/>





    <!--     Fonts and icons     -->
    <link href="http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
    <link href='http://fonts.googleapis.com/css?family=Roboto:400,700,300' rel='stylesheet' type='text/css'>
    <link href="<%= static_path(@conn, "/css/pe-icon-7-stroke.css") %>"  rel="stylesheet" />

</head>
<body>



<div class="wrapper">
    <div class="sidebar" data-color="azure" data-image=<%= static_path(@conn, "/img/sidebar-5.jpg") %>>

    <!--

        Tip 1: you can change the color of the sidebar using: data-color="blue | azure | green | orange | red | purple"
        Tip 2: you can also add an image using data-image tag

    -->

    	<div class="sidebar-wrapper">
				<div class="logo"	>
						<a href="/" class="simple-text">
							<img src="<%= static_path(@conn, "/css/litterbug1.png") %>" style="width:120px;height:40px;">


						</a>
				</div>
            <ul class="nav">

                <li class="active">
									<%= link  to: device_path(@conn, :index) do %>
									<i class="pe-7s-network"></i>
									<p>devices</p>

								 <%= end %>
                
                </li>

								<li class="active">


									          <%= link  to: device_path(@conn, :new) do %>
														<i class="pe-7s-plus"></i>
														<p>New Device</p>

									         <%= end %>

								</li>

            </ul>


						<ul class="nav" style="padding-top:100%;">
							<li class="active"  >
								<%= link  to: device_path(@conn, :myaccount) do %>
																<i class="pe-7s-user"></i>
											<p>My Account</p>
											<%= end %>
							</li>

							<li class="active">
								<%=   if  Guardian.Plug.current_resource(@conn)!=nil do %>
								 <%= link  to: device_path(@conn, :logout) do %>
								 <i class="pe-7s-back-2"></i>
								 <p>Logout</p>

									<%= end %>
								<% end %>

							</li>
							<li class="active">

															<div class="container-fluid">

																	<p class="copyright" >
																		<%=   if  Guardian.Plug.current_resource(@conn)!=nil do %>
																		<%=  Guardian.Plug.current_resource(@conn).email %><br />

																		<% end %>
																			&copy; <script>document.write(new Date().getFullYear())</script> <a href="https://litterbug.cam/" style="color:white;">Litterbug LTD</a>
																	</p>
															</div>
														</li>
						</ul>

    	</div>
    </div>


    <div class="main-panel">



        <div class="content">
            <div class="container-fluid">




                <main role="main"    style="width: 100%;">

                  <%= render @view_module, @view_template, assigns %>
                </main>



              <script src="<%= static_path(@conn, "/js/app.js") %>"></script>










    </div>
</div>
</div>
</div>


</body>

    <!--   Core JS Files   -->
    <script src="/js/jquery.3.2.1.min.js" type="text/javascript"></script>
	<script src="/js/bootstrap.min.js" type="text/javascript"></script>

	<!--  Charts Plugin -->
	<script src="/js/chartist.min.js"></script>

    <!--  Notifications Plugin    -->
    <script src="/js/bootstrap-notify.js"></script>

    <!--  Google Maps Plugin    -->
    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=YOUR_KEY_HERE"></script>

    <!-- Light Bootstrap Table Core javascript and methods for Demo purpose -->
	<script src="/js/light-bootstrap-dashboard.js?v=1.4.0"></script>

	<!-- Light Bootstrap Table DEMO methods, don't include it in your project! -->
	<script src="/js/demo.js"></script>



</html>
